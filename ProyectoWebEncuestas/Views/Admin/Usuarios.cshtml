@{
    Layout = "_LayoutAdmin";
}

<main class="users-dashboard">
    <header class="dashboard-header">
        <h1>Usuarios Registrados</h1>
        <button class="btn-agregar" onclick="irAgregarUsuario()" aria-label="Agregar nuevo usuario">➕ Nuevo Usuario</button>
    </header>

    <section class="users-list" id="usuariosContenedor">
    </section>
</main>

<script>
    async function cargarUsuarios() {
        try {
            const token = localStorage.getItem("token");
            const res = await fetch("https://encuesta-api.websitos256.com/api/usuarios/usuarios", {
                headers: { "Authorization": `Bearer ${token}` }
            });
            if (!res.ok) throw new Error(`HTTP ${res.status}`);

            const usuarios = await res.json();
            const contenedor = document.getElementById("usuariosContenedor");
            contenedor.innerHTML = "";

            if(usuarios.length === 0){
                contenedor.innerHTML = `<p class="sin-usuarios">No hay usuarios registrados.</p>`;
                return;
            }

            usuarios.forEach(u => {
                const tarjeta = document.createElement("article");
                tarjeta.className = "usuario-card";

                tarjeta.innerHTML = `
                    <div class="usuario-info">
                        <h3 class="usuario-nombre">${u.nombre}</h3>
                        <p class="usuario-fecha">Registrado el: <time datetime="${u.fechaRegistro}">${new Date(u.fechaRegistro).toLocaleDateString()}</time></p>
                    </div>
                    <button class="btn-eliminar" aria-label="Eliminar usuario ${u.nombre}" onclick="eliminarUsuario('${u.id}')">❌</button>
                `;

                contenedor.appendChild(tarjeta);
            });

        } catch (err) {
            console.error("Error al cargar usuarios:", err);
            alert("No se pudieron cargar los usuarios. Revisa la consola.");
        }
    }

    function irAgregarUsuario() {
        window.location.href = "/Admin/AgregarUsuario";
    }

    async function eliminarUsuario(id) {
        if (!confirm("¿Está seguro de eliminar el usuario?")) return;

        try {
            const token = localStorage.getItem("token");
              const res = await fetch(`https://encuesta-api.websitos256.com/api/usuarios/${id}`, {
        method: "DELETE",
        headers: { "Authorization": `Bearer ${token}` }
    });

            if (!res.ok) throw new Error("No se pudo eliminar.");

            cargarUsuarios();
        } catch (err) {
            console.error("Error eliminando usuario:", err);
            alert("No se pudo eliminar el usuario.");
        }
    }

    window.addEventListener("DOMContentLoaded", cargarUsuarios);
</script>

<style>
    body {
        background: #f0f4f8;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #2d3748;
        margin: 0;
        padding: 20px;
    }

    .users-dashboard {
        max-width: 900px;
        margin: 40px auto;
        padding: 0 15px;
    }

    .dashboard-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

        .dashboard-header h1 {
            font-weight: 700;
            font-size: 2.1rem;
            letter-spacing: -0.03em;
        }

    .btn-agregar {
        background-color: #3182ce;
        color: white;
        border: none;
        border-radius: 8px;
        padding: 10px 18px;
        font-size: 1rem;
        cursor: pointer;
        box-shadow: 0 4px 12px rgba(49, 130, 206, 0.4);
        transition: background-color 0.3s ease;
    }

        .btn-agregar:hover {
            background-color: #2c6cb0;
        }

    .users-list {
        display: grid;
        grid-template-columns: repeat(auto-fill,minmax(280px,1fr));
        gap: 20px;
    }

    .usuario-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 6px 15px rgba(0,0,0,0.07);
        padding: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: transform 0.2s ease;
    }

        .usuario-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.12);
        }

    .usuario-info {
        max-width: 70%;
    }

    .usuario-nombre {
        margin: 0 0 6px 0;
        font-weight: 600;
        font-size: 1.2rem;
        color: #1a202c;
    }

    .usuario-fecha {
        margin: 0;
        font-size: 0.9rem;
        color: #718096;
    }

    .btn-eliminar {
        background: transparent;
        border: none;
        font-size: 1.6rem;
        cursor: pointer;
        color: #e53e3e;
        padding: 4px 8px;
        border-radius: 6px;
        transition: color 0.25s ease;
    }

        .btn-eliminar:hover {
            color: #9b2c2c;
            background-color: #fee2e2;
        }

    .sin-usuarios {
        font-size: 1.1rem;
        color: #718096;
        text-align: center;
        grid-column: 1 / -1;
        padding: 40px 0;
    }
</style>