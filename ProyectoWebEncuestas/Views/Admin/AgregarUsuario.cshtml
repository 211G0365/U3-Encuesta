        display: flex;
        justify-content: center;
        padding: 60px 20px;
    
    }

    .tarjeta-registro {
   
        padding: 35px 30px;
        border-radius: 16px;
     
        max-width: 500px;
        width: 100%;
    }

    .tarjeta-encabezado {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 28px;
    }

        .tarjeta-encabezado h2 {
            font-size: 1.6rem;
            color: #2d3748;
            margin: 0;
        }

    .formulario-registro .campo-formulario {
        margin-bottom: 20px;
        display: flex;
        flex-direction: column;
    }

    .campo-formulario label {
        margin-bottom: 6px;
        color: #4a5568;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .campo-formulario input,
    .campo-formulario select {
        padding: 10px 12px;
        border: 1px solid #cbd5e0;
        border-radius: 8px;
        font-size: 1rem;
        transition: border-color 0.2s ease;
    }

        .campo-formulario input:focus,
        .campo-formulario select:focus {
            border-color: #3182ce;
            outline: none;
        }

    .acciones-formulario {
        display: flex;
        justify-content: space-between;
        gap: 15px;
        margin-top: 25px;
    }

    .btn-confirmar,
    .btn-cancelar {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        padding: 10px 16px;
        border: none;
        border-radius: 10px;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.2s ease-in-out;
    }

    .btn-confirmar {
        background-color: #38a169;
        color: #ffffff;
    }

        .btn-confirmar:hover {
            background-color: #2f855a;
        }

    .btn-cancelar {
        background-color: #e53e3e;
        color: #ffffff;
    }

        .btn-cancelar:hover {
            background-color: #c53030;
        }

    .icono,
    .icono-input {
        width: 20px;
        height: 20px;
        color: #4a5568;
    }
</style>
